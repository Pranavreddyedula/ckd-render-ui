import pickle
import numpy as np

def load_data_scaler(file_path='scaler.pkl'):
    """
    Loads the fitted StandardScaler or MinMaxScaler object from a pickle (.pkl) file.
    """
    try:
        # Open the file in read binary ('rb') mode
        with open(file_path, 'rb') as file:
            scaler = pickle.load(file)
        print(f"✅ Data Scaler loaded successfully from '{file_path}'")
        return scaler
    except FileNotFoundError:
        print(f"❌ ERROR: Scaler file '{file_path}' not found. Check the file path.")
        return None
    except Exception as e:
        print(f"❌ ERROR loading scaler: {e}")
        return None

